{
  "name": "invoice_generator",
  "version": "1.0.0",
  "description": "Google Apps Script Invoice Generator",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "compile": "tsc",
    "copy-assets": "copyfiles -u 1 assets/**/*.* assets/*.json build",
    "build": "npm run clean && npm run compile && npm run copy-assets",
    "watch": "tsc --watch",
    "push": "npm run build && clasp push",
    "deploy": "npm run push",
    "start": "npm run build && clasp push --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "google-apps-script",
    "invoice",
    "typescript"
  ],
  "author": "Rodion Izotov (izotov.rodion@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/google-apps-script": "^1.0.78",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}

